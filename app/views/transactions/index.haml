- if @transactions.any?
  - form_tag url(:transactions, :dispatch) do
    %p
      = submit_tag "Delete checked", :name => "delete_checked"
    %table#transactions
      %tr
        %th
        %th Date
        %th Check #
        %th Description
        %th Amount
      - for transaction in @transactions
        %tr{:id => "transaction_#{transaction.id}"}
          %td= check_box_tag "to_delete[]", :value => transaction.id, :id => "to_delete_#{transaction.id}"
          %td= transaction.settled_on.strftime("%m/%d/%Y")
          %td= transaction.check_number
          %td= transaction.description
          %td= transaction.amount_as_currency
          %td= link_to "Delete", url(:transactions, :delete, :id => transaction.id)
- else
  %p No transactions.
      
%p
  = link_to "Upload transactions", url(:transactions, :upload)
  
%p
  = link_to "Clear transactions", url(:transactions, :clear)