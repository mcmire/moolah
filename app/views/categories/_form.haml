- resourceful_form_for category, :html => {:class => "stylish"} do |f|
  = f.error_messages
  %div.fields
    %div.text
      = f.label :name
      = f.text_field :name, :size => 50
  %p.buttons
    = button_submit_tag button_text, :class => "medium dark green"
    = link_to "Cancel", url(:categories, :index), :class => "button medium light white"