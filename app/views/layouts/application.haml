!!! 5
%html
  %head
    %meta(charset="utf-8")
    %title= window_title(@title)
    /= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag "vendor/jquery.min.js"
    = javascript_include_tag "vendor/jquery.form.js"
    = stylesheet_link_tag "lib/html5", "app/application"
    = yield_content :head
    %style(type="text/css")
      = yield_content :head_styles
    %script(type="text/javascript" language="javascript")
      = yield_content :head_scripts
  %body
    %header#header
      %h1 Moolah
      %nav
        %ul
          %li= link_to "Transactions", url(:transactions, :index)
          %li= link_to "Categories", url(:categories, :index)
          %li= link_to "Import Rules", url(:import_rules, :index)
          %li= link_to "Graphs", url(:graphs, :index)
    #main
      - if @title
        %header
          %h2= @title
          = yield_content :title
      = message_divs
      = yield